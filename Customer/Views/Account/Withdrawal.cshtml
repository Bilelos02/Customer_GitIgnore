<form name="FormAddOperation" id="FormAddOperationWithdrawal" method="post" action="Account/WithdrawalAmount">
    <div class="form-group col-md-6 col-xs-12">
        <label for="AccountNumber">Numéro du compte</label>
        <input type="text" class="form-control" name="AccountNumber" id="AccountNumber" placeholder="Numéro du compte">
    </div>
    <div class="form-group col-md-6 col-xs-12">
        <label for="Amount">Montant</label>
        <input type="number" class="form-control" name="Amount" id="AmountWithdrawal" placeholder="Montant">
    </div>
    <button type="button" class="btn btn-default" id="SubmitOperationWithdrawal">Valider</button>
    <button type="button" class="btn btn-default" id="GetAllAmount">Enlever toutes mes économies</button>
</form>