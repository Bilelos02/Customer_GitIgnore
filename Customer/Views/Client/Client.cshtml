<form name="FormAddCustomer" id="FormAddCustomer" method="post" action="/Customer/Add">
    <div class="form-group col-md-6 col-xs-12">
        <label for="Name">Nom client</label>
        <input type="text" class="form-control" name="Name" id="NameCustomer" placeholder="Numéro du compte">
    </div>
    <div class="form-group col-md-6 col-xs-12">
        <label for="AccountNumber">Numéro du compte</label>
        <input type="text" class="form-control" name="AccountNumber" id="AccountNumber" placeholder="Numéro du compte">
    </div>
    <div class="form-group col-md-6 col-xs-12">
        <label for="TotalAmount">Montant</label>
        <input type="text" class="form-control" name="TotalAmount" id="TotalAmount" placeholder="Montant">
    </div>
    <button type="button" class="btn btn-default" id="AddCustomer">Valider</button>
</form>